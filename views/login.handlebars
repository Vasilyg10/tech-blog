<form class="signup-form">
  <div>
    <label for="username-signup">Enter Username:</label>
    <input type="text" id="username-signup" />
  </div>
  <div>
    <label for="email-signup">Enter Email:</label>
    <input type="text" id="email-signup" />
  </div>
  <div>
    <label for="password-signup">Enter Password:</label>
    <input type="password" id="password-signup" />
  </div>
  <div>
    <button type="submit">Signup for an Account!</button>
  </div>
</form>
<form class="login-form">
  <div>
    <label for="email-login">Enter Email:</label>
    <input type="text" id="email-login" />
  </div>
  <div>
    <label for="password-login">Enter Password:</label>
    <input type="password" id="password-login" />
  </div>
  <div>
    <button type="submit">Login to your Account!</button>
  </div>
</form>

<script src="/javascript/login.js"></script>